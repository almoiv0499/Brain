<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Brain" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#cce3de</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ChooseLevelTextViewsSettings">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">2</item>
        <item name="android:padding">20dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">5dp</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="OptionAnswerTextViewSettings">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:fontFamily">@font/cambay_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GameTaskTextViewSettings">
        <item name="android:fontFamily">@font/cambay_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="GameResultTextViewSettings">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@drawable/background_for_result</item>
        <item name="android:fontFamily">@font/cambay</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">2</item>
    </style>
</resources>